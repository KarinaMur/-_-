#include <iostream>
#include <string>

using namespace std;

void IsPalindrome(string s) {//является ли число палиндромом.да-возвращает 1, нет-0. 
    int j=s.size()-1;
    int i=0;
    cout<<"i="<<i<<endl;
    cout<<"j="<<j<<endl;

    while(i<j&&s[i]==s[j])
    {

       i++;
       j--;
    }
    if(i>=j) return 1;
    else return 0;
}
int main() {
    if(IsPalindrome("ss")) cout<<"YES!";
}
